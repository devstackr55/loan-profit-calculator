<% flash.each do |key, message| %>
  <% alert_type = case key.to_sym
     when :notice then 'bg-green-100 border-green-400 text-green-700'
     when :alert then 'bg-red-100 border-red-400 text-red-700'
     else 'bg-gray-100 border-gray-400 text-gray-700'
   end %>
  <div class="flash-message alert flex justify-between items-center <%= alert_type %> border-l-4 p-4 mb-4 rounded" role="alert">
    <div>
      <p class="font-bold"><%= key.capitalize %></p>
      <p><%= message %></p>
    </div>
  </div>
<% end %>
